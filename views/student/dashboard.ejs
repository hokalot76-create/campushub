<%- include('../partials/header', { pageTitle: 'Student Dashboard' }) %>
  <div class="layout">
    <%- include('../partials/sidebar-student', { active: 'events' }) %>
      <section class="layout-main">
        <h1>Welcome, <%= currentUser.name %>
        </h1>
        <p class="muted">Student ID: <%= currentUser.id %>
        </p>

        <% if (blocked) { %>
          <div class="alert error">
            You are currently blocked from registering to events. Please contact the administration.
          </div>
          <% } %>



            <div class="events-grid">
              <% events.forEach(e=> { %>
                <div class="card event-card">
                  <div class="event-badges">
                    <% if (e.isFull) { %>
                      <span class="pill danger">Full</span>
                      <% } else { %>
                        <span class="pill">Upcoming</span>
                        <% } %>
                          <% if (e.registered) { %>
                            <span class="pill success">Registered</span>
                            <% } %>
                  </div>
                  <h3 class="event-title">
                    <%= e.title %>
                  </h3>
                  <p class="event-description">
                    <%= e.description %>
                  </p>
                  <ul class="event-meta">
                    <li>ğŸ“… <%= e.date %> â€¢ <%= e.time %>
                    </li>
                    <li>ğŸ“ <%= e.location %>
                    </li>
                    <li>ğŸ‘¥ <%= e.registeredCount %> / <%= e.capacity %> registered</li>
                  </ul>
                  <div class="event-rules">
                    <strong>Rules:</strong>
                    <%= e.rules %>
                  </div>
                  <div class="event-actions">
                    <% if (e.registered) { %>
                      <form method="POST" action="/student/events/<%= e.id %>/cancel">
                        <input type="hidden" name="from" value="events">
                        <button class="btn danger full">Cancel Registration</button>
                      </form>
                      <% } else if (e.isFull || blocked) { %>
                        <button class="btn full" disabled>
                          <%= blocked ? 'Blocked' : 'Event Full' %>
                        </button>
                        <% } else { %>
                          <form method="POST" action="/student/events/<%= e.id %>/register">
                            <button class="primary-btn full">Register</button>
                          </form>
                          <% } %>
                  </div>
                </div>
                <% }) %>
            </div>
      </section>
  </div>
  <%- include('../partials/footer') %>