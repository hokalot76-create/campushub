<%- include('../partials/header', { pageTitle: 'Login' }) %>
<div class="auth-wrapper">
  <div class="card auth-card">
    <div class="auth-logo">C</div>
    <h2 class="auth-title">Welcome back</h2>
    <p class="auth-subtitle">Enter your ID and password to access your account</p>
    <% if (error) { %>
      <div class="alert error"><%= error %></div>
    <% } %>
    <form method="POST" action="/login" class="form">
      <label class="form-label">User ID or Email</label>
      <input type="text" name="id" placeholder="e.g. 123456 or email@university.edu" class="input" />
      <label class="form-label">Password</label>
      <input type="password" name="password" class="input" />
      <button type="submit" class="primary-btn full">Sign In</button>
    </form>
    <p class="auth-footer">
      Don't have an account?
      <a href="/student/signup">Student Sign Up</a>
    </p>
  </div>
</div>
<%- include('../partials/footer') %>
